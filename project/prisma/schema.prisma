generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model Shipment {
  id              String   @id @default(cuid())
  trackingId      String   @unique
  senderName      String
  senderAddress   String
  recipientName   String
  recipientAddress String
  destination     String
  paymentMethod   String
  totalCost       Float
  status          String
  invoiceStatus   String
  createdAt       DateTime @default(now())
}

model Customers {
  id               String   @id @default(cuid())
  Company          String
  Address          String
  City             String
  Country          String
  Contact          String
  Email            String @unique
  ActiveStatus          String
  SpecialInstructions   String
  createdAt       DateTime @default(now())
}

model Vendors {
    id               String   @id @default(cuid())
  Company          String
  Address          String
  City             String
  Country          String
  Contact          String
  Email            String @unique
  ActiveStatus          String
  createdAt       DateTime @default(now())
}

model Recipients {
  id               String   @id @default(cuid())
  Company          String
  Address          String
  City             String
  Country          String
  Contact          String
  Email            String @unique
  ActiveStatus          String
  SpecialInstructions   String
  createdAt       DateTime @default(now())
}